<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAB001"
    tools:context=".FindID">

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="409dp"
      android:layout_height="390dp"
      android:layout_marginBottom="400dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.141"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/rounded_coner"
      />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="328dp"
      android:layout_height="563dp"
      android:src="@drawable/rounded_background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:fontFamily="@font/poetsenone_regular"
      android:text="Find ID"
      android:textColor="#906E07"

      android:textSize="28sp"
      app:layout_constraintEnd_toEndOf="@+id/imageView8"
      app:layout_constraintStart_toStartOf="@+id/imageView8"
      app:layout_constraintTop_toTopOf="@+id/imageView8" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="480dp"
      android:fontFamily="@font/laundrygothic_bold"
      android:text="이메일*"
      android:textColor="#906E07"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/imageView8"
      app:layout_constraintTop_toBottomOf="@+id/textView11" />

  <EditText
      android:id="@+id/FindEmailAddress"
      android:layout_width="294dp"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/rectangular"
      android:ems="10"
      android:hint="예)1234@gmail.com"
      android:inputType="textEmailAddress"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />

  <TextView
      android:id="@+id/textView13"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="420dp"
      android:fontFamily="@font/laundrygothic_bold"
      android:text="이름*"
      android:textColor="#906E07"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/imageView8"
      app:layout_constraintTop_toBottomOf="@+id/FindEmailAddress" />

  <EditText
      android:id="@+id/FindName"
      android:layout_width="294dp"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/rectangular"
      android:ems="10"
      android:hint="예) 홍길동"
      android:inputType="text"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView13" />

  <TextView
      android:id="@+id/textView14"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="310dp"
      android:fontFamily="@font/laundrygothic_bold"
      android:text="휴대폰 번호*"
      android:textColor="#906E07"
      android:textSize="16sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="@+id/imageView8"
      app:layout_constraintTop_toBottomOf="@+id/imageView7" />

  <EditText
      android:id="@+id/FindPhone"
      android:layout_width="294dp"
      android:layout_height="48dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/rectangular"
      android:ems="10"
      android:hint="예) 010-1234-5678"
      android:inputType="phone"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView14" />

  <Button
      android:id="@+id/Find_btn"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="#F7F5DB"
      android:fontFamily="@font/poetsenone_regular"
      android:text="Find"
      android:textColor="#7E5D08"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/FindPhone" />


</androidx.constraintlayout.widget.ConstraintLayout>