<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:contentDescription="풍자버튼"
    android:orientation="vertical">


    <TextView
        android:id="@+id/titlehome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/poetsenone_regular"
        android:text="MAKET"
        android:textColor="#906E07"
        android:textSize="28sp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:focusable="true"
        android:padding="20dp"
        app:iconifiedByDefault="false"
        app:layout_constraintBottom_toTopOf="@id/titlehome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        app:queryHint="검색어를 입력하시오"
        android:layout_marginBottom="10dp"
        >


    </androidx.appcompat.widget.SearchView>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:text="추천 유튜버"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sigungbutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/sigung"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/pungja_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/pung_ja"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/sangmubutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/sang_mu"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/jyangbutton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/jyang"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sigung_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="성시경"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pungja_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="풍자"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sangmu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="맛상무"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jyang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="쯔양"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:background="#7A7878"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추천 맛집"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>