<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAB001"
    tools:context=".CertificationActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="409dp"
        android:layout_height="390dp"
        android:layout_marginBottom="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rounded_coner" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="328dp"
        android:layout_height="563dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_background" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/laundrygothic_bold"
        android:text="휴대폰 본인인증"
        android:textColor="#906E07"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <EditText
        android:id="@+id/phone_layout"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginBottom="450dp"
        android:background="@drawable/rectangular"
        android:ems="10"
        android:hint="휴대폰번호 - 없이 입력하세요."
        android:inputType="phone"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <Button
        android:id="@+id/btn_getotp"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F7F5DB"
        android:fontFamily="@font/laundrygothic_bold"
        android:text="인증번호 발송"
        android:textColor="#7E5D08"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/phone_layout" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="294dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangular"
        android:ems="10"
        android:hint="인증번호를 입력해주세요. 예)1234"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/messageCheckButton"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F7F5DB"
        android:fontFamily="@font/laundrygothic_bold"
        android:text="인증번호 확인"
        android:textColor="#7E5D08"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/et_phone" />

</androidx.constraintlayout.widget.ConstraintLayout>